          <form action="/edit/authors/delete" method="post" onsubmit="return checkedVerify();">

            <div class="row justify-content-end" style="padding: 1rem; padding-top: 0rem;">
                <input class="secondary-button" type="button" onclick="clearSelection();"
                    value="Clear Selection">
                <input class="primary-button" id="submit-button" onclick="showConfirm();" type="button"
                    value="Delete">
            </div>

            <div id="delete-confirm" hidden style="padding: 1rem; padding-top: 0;">
                <div class="row justify-content-end">
                    <h5>Are you sure you want to delete the selected items?</h5>
                </div>
                <div class="row justify-content-end">
                    <input class="secondary-confirm-button" onclick="hideConfirm();" type="button"
                        value="Cancel">
                    <input class="primary-confirm-button" type="submit" value="Confirm">
                </div>
            </div>

            <div class="card line-card"></div>

            <%for(let i=authors.length-1;i>=0;i--){%>
                <div class="row" style="padding-left: 4rem;">
                    <div class="col-2 row justify-content-center align-items-center">
                        <input class="delete-box" type="checkbox" name='deleteCheckBox'
                            value="<%=authors[i]._id%>">
                    </div>
                    <div class="col-10">
                        <div class="row align-items-center">
                            <div class="col-md-2 col-sm-3 row justify-content-center">
                                <a href="/edit/authors/<%=authors[i]._id%>" style="text-align: center;"><img
                                        alt="" src="<%=authors[i].image%>" style="width: 100px; height: 100px;"
                                        class="img-circle"></a>
                            </div>
                            <div class="col-md-10 col-sm-9 align-items-center" style="padding-left: 2rem;">
                                <div class="col-xs-9">
                                    <a href="/edit/authors/<%=authors[i]._id%>"
                                        style="text-decoration: none; color: inherit;">

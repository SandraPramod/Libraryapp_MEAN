      form{
        background-image: url("/images/bg1.jfif") ;
        background-repeat: no-repeat;
        background-size: cover;
      }
    </style>
	</head>
	<body>
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">Home</a>
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
       <%for(i=0;i<nav1.length;i++){%>
         <li>
           <a href="<%=nav1[i].link%>"><%=nav1[i].name%></a>
         </li>
         <%}%>
      </ul>
      <ul class="nav navbar-right navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
          <ul class="dropdown-menu" style="padding:12px;">
            <form class="form-inline">
              <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-search"></i></button><input type="text" class="form-control pull-left" placeholder="Search">
            </form>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>

<div class="container-fluid" style="padding-top: 3rem;">
  <div class="row justify-content-center">
      <div class="col-lg-12 vertical-center">
          <div class="card">
              <div class="row align-items-center">
                  <div class="col-lg-5 d-none d-lg-flex">
                      <img src="./images/signup.jfif" alt="Login Image" width="100%">
                  </div>
                  <div class="col-lg-7" style="padding: 2rem;">
                      <div class="text-center">
                          <h3 class="text-dark mb-4" style="font-family: 'Abel', sans-serif;">Create an Account
                              </h4>
                      </div>

                      <form class="user" method="POST" action="/signup/add"
                          onsubmit="return loginValidation();">
                          <div class="form-group row">
                              <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control roundBorder"
                                      type="text" id="firstName" name="firstName" placeholder="First Name"
                                      required></div>

                              <div class="col-sm-6"><input class="form-control roundBorder" type="text"
                                      id="lastName" name="lastName" placeholder="Last Name" required></div>
                          </div>
                          <div class="form-group"><input class="form-control roundBorder" type="text"
                                  id="username" placeholder="Username" name="username" required>
                          </div>
                          <div class="form-group"><input class="form-control roundBorder" type="email" id="email"
                                  placeholder="Email" name="email" required>
                          </div>
                          <div class="form-group row">
                              <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control roundBorder"
                                      type="password" id="inputPassword" name="password" placeholder="Password"
                                      required oninput="passwordStrength(this);">
                              </div>

                              <div class="col-sm-6"><input class="form-control roundBorder" type="password"
                                      id="repeatPasswordInput" placeholder="Repeat Password" required
                                      oninput="passwordRepeatCheck(this);">
                              </div>
                          </div>
                          <div class="form-group row">
                              <div class="col-12">
                                  <label for="password error"
                                      style="text-align: center; border: 2px solid #DC3545; padding: 1rem; width: 100%;"
                                      id="passwordError" hidden></label>

                              </div>

                          </div>
                          <input class="btn btn-block roundBorder"
                              style="margin-top: 10px; background-color: darkblue; color: #fffffe; font-family: 'Montserrat', sans-serif;"
                              type="submit" value="Sign Up">

                      </form>
                      <hr>

                      <div class="text-center"><a class="small redirect-links" href="/login">Already have an
                              account?
                              Login!</a></div>
                      <div class="text-center"><a class="small redirect-links" href="#">Forgot Password?</a></div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <ul class="list-inline">
          <li><i class="icon-facebook icon-2x"></i></li>
